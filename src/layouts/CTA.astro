---
import { Button, Text } from "../components";
import Container from "./Container.astro";
const sectionTitle = "Connect with Our Team for Tailored Digital Solutions";
const sectionDescription =
  "Whether you're seeking guidance, exploring opportunities, or ready to launch a campaign, our experts are here to assist. Share your inquiries or project details, and let's create something great together.";
---

<Container className="py-md lg:py-lg">
  <div
    class="flex flex-col lg:flex-row gap-y-lg gap-x-md items-top justify-between pb-md lg:pb-lg"
  >
    <div class="w-full lg:w-2/3">
      <Text variant="h1">{sectionTitle}</Text>
    </div>
    <div class="w-full lg:w-1/3">
      <Text variant="p" colorStyle="secondary" className="pb-md">
        {sectionDescription}
      </Text>
      <Button>Book a Call</Button>
    </div>
  </div>
</Container>
